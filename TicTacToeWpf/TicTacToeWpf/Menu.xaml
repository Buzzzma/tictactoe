<Window x:Class="TicTacToeWpf.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToeWpf"
        mc:Ignorable="d"
        Title="Menu" Height="400" Width="300">
    <Grid>
        <StackPanel Width="200">
            <Button Margin="0 10 0 10" FontSize="22" Content="Играть" Click="Play_Click"/>
            <Button Margin="0 0 0 10" FontSize="22" Content="Правила" Click="Rules_Click"/>
            <Button Margin="0 0 0 10" FontSize="22" Content="Закрыть" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
